<?xml version="1.0" encoding="utf-8"?>
<!--用于账户详细页面的item-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:id="@+id/recyclerView_at_account_bills">

    <TextView
        android:id="@+id/textView_account_type"
        android:layout_width="44dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:text="日用"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16" />

    <TextView
        android:id="@+id/textView_account_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="04月25日"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView_account_money"
        app:layout_constraintTop_toBottomOf="@+id/textView_account_money"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_account_money"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginStart="296dp"
        android:text="-200"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.228" />

</androidx.constraintlayout.widget.ConstraintLayout>